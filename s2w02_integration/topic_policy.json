{
  "Version": "2008-10-17",
  "Id": "__default_policy_ID",
  "Statement": [
    {
      "Sid": "__default_statement_ID",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": [
        "SNS:GetTopicAttributes",
        "SNS:SetTopicAttributes",
        "SNS:AddPermission",
        "SNS:RemovePermission",
        "SNS:DeleteTopic",
        "SNS:Subscribe",
        "SNS:ListSubscriptionsByTopic",
        "SNS:Publish",
        "SNS:Receive"
      ],
      "Resource": "arn:aws:sns:eu-west-1:637116340434:xyz",
      "Condition": {
        "StringEquals": {
          "AWS:SourceOwner": "637116340434"
        }
      }
    },
    {
      "Sid": "allow-s3-publish-to-sns",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": "SNS:Publish",
      "Resource": "arn:aws:sns:eu-west-1:637116340434:xyz",
      "Condition": {
        "ArnEquals": {
          "aws:SourceArn": "arn:aws:s3:::notifier-source-2"
        }
      }
    },
    {
      "Sid": "allow-s3-publish-to-sns",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": "SNS:Publish",
      "Resource": "arn:aws:sns:eu-west-1:637116340434:xyz",
      "Condition": {
        "ArnEquals": {
          "aws:SourceArn": "arn:aws:s3:::notifier-source-2"
        }
      }
    }
  ]
}
